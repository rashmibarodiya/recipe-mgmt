{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "passThroughEnv": ["MONG","SECRET","GOOGLE_CLIENT_ID","GOOGLE_CLIENT_SECRET",
      "NEXT_PUBLIC_CLAUD_NAME","NEXT_PUBLIC_CLAUDINARY_PRESET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
